<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rmo5087.edu.psu.soundscape"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="rmo5087.edu.psu.soundscape.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
  			android:configChanges="orientation|keyboardHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="rmo5087.edu.psu.soundscape.SongActivity"
            android:label="@string/title_activity_song"
            android:screenOrientation="portrait"
			android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name="rmo5087.edu.psu.soundscape.Settings"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait"
			android:configChanges="orientation|keyboardHidden">
        </activity>
    </application>
    <!-- Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
